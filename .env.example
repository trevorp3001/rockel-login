# Basic app settings
PORT=3000
NODE_ENV=development

# Base URL of the app
# For local dev: http://localhost:3000
# For production: https://www.rockelshippingcompany.com
BASE_URL=http://localhost:3000

# Session secrets (set to long random strings in real .env)
SESSION_SECRET_MAIN=change_me_main_secret
SESSION_SECRET_STAFF=change_me_staff_secret
SESSION_SECRET_PORTAL=change_me_portal_secret

# Email (Nodemailer)
EMAIL_HOST=your-smtp-host
EMAIL_PORT=465
EMAIL_SECURE=true
EMAIL_USER=your-email@example.com
EMAIL_PASS=your-email-password-or-app-password
EMAIL_FROM="Rockel Shipping <your-email@example.com>"

# Stripe (if used)
STRIPE_SECRET_KEY=sk_live_or_test_key_here
STRIPE_WEBHOOK_SECRET=webhook_secret_here
